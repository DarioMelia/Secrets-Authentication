<%- include('partials/header') %>

<div class="container">

  <div class="jumbotron centered vertical huge-gap">

    <div>
      <i class="fas fa-key fa-8x"></i>
      <h1 class="display-3 submit__title">Secrets</h1>
    </div>

    <div class="submit-flex">
      <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

      <form class="wide" action="/submit" method="POST">

        <div class="form-group">
          <textarea class="form-control" rows="3" id="text" name="secret" autocomplete="off" maxlength="300" placeholder="Maximum: 300 characters"></textarea>
        </div>
        <div class="flex centered">
          <button type="submit" class="btn btn-dark mt-3">Submit</button>
          <a href="/secrets" class="btn btn-light mt-3">Back</a>
        </div>
      </form>
    </div>
  </div>


</div>
</div>
