<%- include('partials/header') %>
<div class="container mt-5">
  <h1 class="form-title">Register</h1>

  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control my-2" name="username" required placeholder="example@example.com">

            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control my-2" name="password" minlength="8" placeholder="At least 8 characters">
            </div>
          <div class="flex flex--errorMsg">
            <button type="submit" class="btn btn-dark">Register</button>
            <% if (errorMessage){ %>   
            <span class="error-message"><%= errorMessage %></span>
            <% } %>
          </div>
          </form>

        </div>
      </div>
    </div>

     <div class="col-lg-4 col-md-10 col-sm-12">
      <div class="card social-block">
        <div class="card-body flex flex--vertical">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign Up with Facebook
          </a>
          <a class="btn btn-block btn-social btn-discord" href="/auth/discord" role="button">
            <i class="fab fa-discord"></i>
            Sign Up with Discord
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
