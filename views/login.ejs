<%- include('partials/header') %>

<div class="container mt-5">
<div>
  <h1 class="form-title">Login</h1>

  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control my-2" name="username" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control my-2" name="password" required>
            </div>
          <div class="flex flex--errorMsg">
              <button type="submit" class="btn btn-dark btn--login">Login</button>
            <% if (errorMessage){ %> 
            <span class="error-message"><%= errorMessage %></span>
            <% } %>
          </div>
          </form>

        </div>
      </div>
    </div>

     <div class="col-lg-4 col-md-10 col-sm-12">
      <div class="card">
        <div class="card-body flex flex--vertical">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
          <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign In with Facebook
          </a>
          <a class="btn btn-block btn-social btn-discord" href="/auth/discord" role="button">
            <i class="fab fa-discord"></i>
            Sign In with Discord
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
</div>

<%- include('partials/footer') %>
